<h1>All Cities</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Country</th>
    <th></th>
    <th>Continent</th>
    <th></th>
    <th>Visited/To Visit</th>
  </tr>
  <% for city in @cities %>
  <tr>
    <td><a href="/cities/<%= city.id %>"><%= city.name %></a></td>
    <td>|</td>
    <td><%= city.country.name %></td>
    <td>|</td>
    <td><%= city.country.continent.name %></td>
    <td>|</td>
    <td><%= city.status %></td>
  </tr>
  <% end %>
</table>
