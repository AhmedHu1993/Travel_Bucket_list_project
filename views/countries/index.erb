<h1>Countries</h1>

<ul>
  <li>
    <a href="/countries">Countries list</a>
  </li>
  <li>
    <a href="/countries/new">Add new</a>
  </li>
</ul>
<hr>
<section class="country_hr">
<table>
  <tr>
    <th>Country Name</th>
    <th></th>
    <th></th>
    <th>Continent</th>
  </tr>
  <% for country in @countries %>
  <tr>
    <td><a href="/countries/<%= country.id %>"><%= country.name %></a></td>
    <td><img src="<%= country.flag %>" alt="<%= country.name %> flag" id="flag_icon"></td>
    <td>|</td>
    <td><%= country.continent.name %></td>
    <!-- <td><a href="#" class="delete_city"></a></td> -->
  </tr>
  <% end %>
</table>
</section>
